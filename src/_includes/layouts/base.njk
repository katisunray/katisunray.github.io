<!doctype html>
<html lang="{{ site.language | default('en') }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {% include "partials/seo.njk" %}
    <link rel="stylesheet" href="{{ '/assets/main.css' | url }}" />
  </head>
  <body class="min-h-screen bg-gradient-to-br from-neutral-50 to-white text-neutral-900 antialiased">
    <header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-neutral-200/50">
      <div class="container-custom">
        <div class="flex items-center justify-between py-4">
          <a href="{{ '/' | url }}" class="text-2xl font-serif font-semibold text-gradient hover:scale-105 transition-transform duration-200">
            {{ site.name }}
          </a>
          <button class="md:hidden p-3 rounded-xl border border-neutral-200 hover:border-neutral-300 hover:bg-neutral-50 transition-all duration-200" aria-label="Toggle menu" data-menu-toggle>
            <span class="block w-5 h-0.5 bg-neutral-800 mb-1.5 transition-all duration-200"></span>
            <span class="block w-5 h-0.5 bg-neutral-800 mb-1.5 transition-all duration-200"></span>
            <span class="block w-5 h-0.5 bg-neutral-800 transition-all duration-200"></span>
          </button>
          <nav class="hidden md:flex gap-8 text-sm font-medium" data-menu>
            <a class="text-neutral-700 hover:text-brand-600 hover:scale-105 transition-all duration-200 relative group" href="{{ '/' | url }}">
              Home
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand-500 group-hover:w-full transition-all duration-200"></span>
            </a>
            <a class="text-neutral-700 hover:text-brand-600 hover:scale-105 transition-all duration-200 relative group" href="{{ '/shop/' | url }}">
              Shop
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand-500 group-hover:w-full transition-all duration-200"></span>
            </a>
            <a class="text-neutral-700 hover:text-brand-600 hover:scale-105 transition-all duration-200 relative group" href="{{ '/about/' | url }}">
              About
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand-500 group-hover:w-full transition-all duration-200"></span>
            </a>
          </nav>
        </div>
      </div>
    </header>
    <main class="min-h-screen">
      {{ content | safe }}
    </main>
    <footer class="bg-gradient-to-r from-neutral-900 to-neutral-800 text-white">
      <div class="container-custom py-16">
        <div class="grid md:grid-cols-3 gap-8">
          <div class="space-y-4">
            <h3 class="text-xl font-serif font-semibold">{{ site.name }}</h3>
            <p class="text-neutral-300 leading-relaxed">Thoughtful gifts for baby, kids & parents. Cherishing simple and precious family moments.</p>
          </div>
          <div class="space-y-4">
            <h4 class="font-semibold">Quick Links</h4>
            <nav class="space-y-2">
              <a href="{{ '/' | url }}" class="block text-neutral-300 hover:text-white transition-colors duration-200">Home</a>
              <a href="{{ '/shop/' | url }}" class="block text-neutral-300 hover:text-white transition-colors duration-200">Shop</a>
              <a href="{{ '/about/' | url }}" class="block text-neutral-300 hover:text-white transition-colors duration-200">About</a>
            </nav>
          </div>
          <div class="space-y-4">
            <h4 class="font-semibold">Contact</h4>
            <div class="space-y-2 text-neutral-300">
              <p>Made in Canada</p>
              <p>Created and printed in Ontario</p>
              <a href="mailto:{{ site.author.email }}" class="block hover:text-white transition-colors duration-200">{{ site.author.email }}</a>
            </div>
            <div class="mt-4 space-y-2">
              <h5 class="font-medium">Subscribe</h5>
              <a href="https://forms.gle/syEY5aQRLSXMeCSF8" target="_blank" rel="noopener noreferrer" class="block text-neutral-300 hover:text-white transition-colors duration-200">Subscribe to our newsletter â€“ Sign up for the latest news and new products</a>
            </div>
            <div class="mt-4 space-y-2">
              <h5 class="font-medium">Follow</h5>
              {% include "partials/social-icons.njk" %}
            </div>
          </div>
        </div>
        <div class="border-t border-neutral-700 mt-12 pt-8 text-center text-neutral-400">
          <p>&copy; {{ "now" | date("yyyy") }} {{ site.name }}. All rights reserved.</p>
        </div>
      </div>
    </footer>
    <script>
    (function(){
      var btn = document.querySelector('[data-menu-toggle]');
      var menu = document.querySelector('[data-menu]');
      if(btn && menu){
        btn.addEventListener('click', function(){
          if(menu.classList.contains('hidden')){ 
            menu.classList.remove('hidden');
            menu.classList.add('animate-fade-in');
          } else { 
            menu.classList.add('hidden');
            menu.classList.remove('animate-fade-in');
          }
        });
      }
    })();
    </script>
  </body>
  </html>
